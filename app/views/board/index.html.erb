<div class="container" style="margin-top : 50px">
    <% @posts.each do |post| %>
        <p><%= post.title %></p>
        <p><%= post.content %></p>
        <p><%= post.created_at %></p><hr>
        <form action='/board/<%= post.id %>/comment_create' method='POST'>
            <div class="form-group">
                <input type="text" class="form-control" name="content" placeholder="댓글">
            </div>
            <button type="submit" class="btn btn-default">댓글 달기</button>
        </form>
        <hr>
        <% post.comments.each do |comment| %>
            <%= comment.id %>
            <%= comment.content %><br>
        <% end %>
        <hr>
    <% end %>
    <form action='board/create' method='POST'>
        <div class="form-group">
            <label for="exampleInputEmail1">글을 적어보자</label>
            <input type="text" class="form-control" name="title" placeholder="제목">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="content"></textarea>
        </div>
        <button type="submit" class="btn btn-default">게시</button>
    </form>
</div>