<h1>게시물 수정</h1>

<div class="container" style="margin-top : 50px">
    <form action="/modify/<%= @one_post.id %>" method="POST">
      <div class="form-group">
        <label for="exampleInputTitle">제목</label>
        <input type="text" name="title" value="<%= @one_post.title %>" class="form-control" id="exampleInputEmail1" placeholder="제목을 적어보자~">
      </div>
      <label for="exampleInputTitle">내용</label>
      <textarea name="content" class="form-control" rows='5' id="comment" style="margin-top : 20px"><%= @one_post.content %></textarea>
      <button type="submit" class="btn btn-default">게시</button>
    </form>
</div>